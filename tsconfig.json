{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "app/src/*"
            ],
            "@public/*": [
                "app/public/*"
            ],
            "@assets/*": [
                "app/public/assets/*"
            ]
        }
    },
    "include": [
        "app/src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}